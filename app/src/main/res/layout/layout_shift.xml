<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ac1e23"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewPanorama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/panorama" />

        <TextView
            android:id="@+id/textViewLabelMehanik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewPanorama"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="Механик :"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewPanMehanik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewLabelMehanik"
            android:layout_alignStart="@+id/textViewLabelMehanik"
            android:layout_below="@+id/textViewLabelMehanik"
            android:layout_marginTop="5dp"
            android:text="Венци"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <GridLayout
            android:id="@+id/layoutKasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewPanMehanik"
            android:layout_alignStart="@+id/textViewPanMehanik"
            android:layout_below="@+id/textViewPanMehanik"
            android:layout_marginTop="30dp"
            android:columnCount="3"
            android:rowCount="2">

                <TextView
                    android:id="@+id/textViewLabelKasaOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Каса 1 :"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewLabelPanKasaTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Каса 2 :"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewLabelKasaThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Каса 3 :"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewPanKasaOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Цвети"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textViewPanKasaTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Наталия"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textViewPanKasaThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Няма"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

        </GridLayout>

        <GridLayout
            android:id="@+id/layoutRaz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layoutKasa"
            android:layout_alignStart="@+id/layoutKasa"
            android:layout_below="@+id/layoutKasa"
            android:layout_marginTop="30dp"
            android:columnCount="2"
            android:rowCount="2">

                <TextView
                    android:id="@+id/textViewLabelRazOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Посреща :"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/extViewLabelRazTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Изпраща :"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewRazOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Дафинела"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textViewRazTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Кака"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
        </GridLayout>

        <Button
            android:id="@+id/buttonCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="#ffffff"
            android:padding="15dp"
            android:text="Календар"
            android:textColor="#ac1e23"
            tools:ignore="HardcodedText" />

</RelativeLayout>
